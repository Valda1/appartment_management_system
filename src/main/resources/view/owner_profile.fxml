<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.housemanagementsystem.users.UserController"
          prefHeight="400.0" prefWidth="600.0">

    <Text fx:id="profileTitleText" text="Welcome to your profile!" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Button onAction="#navigateToScene" id="user_info" text="Edit your user info" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Button onAction="#navigateToScene" id="measurements" text="Submit water meter reading" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Button onAction="#navigateToScene" id="invoices" text="See invoice info" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Button onAction="#navigateToScene" id="chat" text="See chat" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Button onAction="#navigateToScene" id="voting" text="Take part in voting" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    <Button onAction="#navigateToScene" id="login" text="Logout" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

</GridPane>
